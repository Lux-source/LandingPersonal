---
import Badge from "@/components/Badge.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import SocialPill from "@/components/SocialPill.astro";

import translationsES from "../../local/es.json";
import translationsEN from "../../local/en.json";

// Valor por defecto para 'lang' es "es", pero si lo llamas con <Hero lang="en" /> usará inglés
const { lang = "es" } = Astro.props;

// Selecciona el JSON según el idioma
const t = lang === "en" ? translationsEN : translationsES;

// Imagen alt
const personalImageAlt = "Lucian Andrei Negoita";
---

<div class="max-w-xl">
	<div class="flex gap-4 mb-4">
		<img
			class="rounded-full shadow-lg w-16 h-16"
			src="/lucian.webp"
			alt={personalImageAlt}
		/>
		<a
			href="https://linkedin.com/in/lucian-andrei-negoita"
			target="_blank"
			rel="noopener"
			class="flex items-center transition md:justify-center md:hover:scale-105"
		>
			<Badge>{t.hero.badge}</Badge>
		</a>
	</div>
	<h1
		class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
	>
		{t.hero.intro}
	</h1>
	<p
		class="mt-6 text-xl text-gray-800 dark:text-gray-300"
		set:html={t.hero.description}
	/>
	<nav class="flex flex-wrap gap-4 mt-8">
		<SocialPill href="mailto:negoitalucianandrei@gmail.com">
			<MailIcon class="w-5 h-5" />
			{t.hero.contactMe}
		</SocialPill>
		<SocialPill href="https://linkedin.com/in/lucian-andrei-negoita">
			<LinkedInIcon class="w-5 h-5" />
			{t.hero.linkedin}
		</SocialPill>
	</nav>
</div>
