---
import { t } from "../utils/i18n.js";

const about = {
	name: "Lucian Andrei Negoita",
	role: t("aboutMe.role"),
	description: t("aboutMe.description"),
};

const personalImageAlt = "Lucian Andrei Negoita";
---

<article
	class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row"
>
	<div
		class="[&>p]:mb-4 [&>p>strong]:text-yellow-500 dark:[&>p>strong]:text-yellow-100 [&>p>strong]:font-normal [&>p>strong]:font-mono text-pretty order-2 md:order-1"
	>
		<p set:html={t("aboutMe.p1")} />
		<p>{t("aboutMe.p2")}</p>
		<p>
			<strong>{t("aboutMe.contactLabel")}</strong>
			<a href="mailto:negoitalucianandrei@gmail.com" class="underline">
				negoitalucianandrei@gmail.com
			</a> | {t("aboutMe.telLabel")}
			{t("aboutMe.tel")}
		</p>
		<p>
			<a
				href="https://linkedin.com/in/lucian-andrei-negoita"
				target="_blank"
				class="underline"
			>
				{t("aboutMe.linkedin")}
			</a> |
			<a href="https://github.com/Lux-source" target="_blank" class="underline">
				{t("aboutMe.github")}
			</a>
		</p>
		<p>{t("aboutMe.description")}</p>
	</div>
	<img
		width="200"
		height="200"
		src="/me.webp"
		alt="Lucian Andrei Negoita"
		class="order-1 object-cover w-64 h-full p-1 md:order-2 rotate-3 lg:p-2 lg:w-64 aspect-square rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/20"
		style="object-position: 50% 50%"
	/>
</article>
