---
import ThemeToggle from "./ThemeToggle.astro";
import LanguageToggle from "./LanguageToggle.astro";
import translationsES from "../../local/es.json";
import translationsEN from "../../local/en.json";

const navItems = [
	{ title: "Proyectos", label: "proyectos", url: "#projects" },
	{ title: "Formación", label: "education", url: "#education" },
	{ title: "Sobre mí", label: "sobreMi", url: "#aboutMe" },
	{
		title: "Contacto",
		label: "contacto",
		url: "mailto:negoitalucianandrei@gmail.com",
	},
];

// Idioma por defecto
const { lang = "es" } = Astro.props;

const t = lang === "en" ? translationsEN : translationsES;
---

<header
	class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2"
>
	<nav
		class="flex px-2 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center"
	>
		{
			navItems.map((item) => (
				<a
					href={item.url}
					class="mx-2 hover:text-teal-600 dark:hover:text-emerald-400 transition-colors"
				>
					{t.header.nav[item.label]}
				</a>
			))
		}
		<ThemeToggle />
		<LanguageToggle lang={lang} />
	</nav>
</header>
