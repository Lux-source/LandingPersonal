---
import Layout from "@/layouts/Layout.astro";
import AboutMe from "@/components/AboutMe.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Projects from "@/components/Projects.astro";
import Education from "@/components/Education.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import TitleSection from "@/components/TitleSection.astro";
---

<Layout
	title="Portfolio de Lucian Andrei Negoita - Full Stack & DevOps"
	description="Portfolio personal de Lucian Andrei Negoita, estudiante de Ingeniería Informática con experiencia en AWS, DevOps y desarrollo web."
>
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<Hero />
		</SectionContainer>
		<div class="space-y-24">
			<SectionContainer id="projects">
				<TitleSection>
					<CodeIcon class="w-7 h-7" />
					Proyectos
				</TitleSection>
				<Projects />
			</SectionContainer>
			<SectionContainer id="education">
				<TitleSection>
					<CodeIcon class="w-7 h-7" /> Formación
				</TitleSection>
				<Education />
			</SectionContainer>
			<SectionContainer id="aboutMe">
				<TitleSection>
					<ProfileCheck class="w-8 h-8" />
					Sobre mí
				</TitleSection>
				<AboutMe />
			</SectionContainer>
		</div>
	</main>
</Layout>
